    "mobx-react": "^4.4.3",
    "popper.js": "^1.15.0",
    "prop-types": "^15.7.2",
    "qs": "^6.7.0",
    "query-string": "^5.1.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "select2": "^4.0.7",
    "sortablejs": "^1.9.0",
    "svg-injector-2": "^2.0.35"
