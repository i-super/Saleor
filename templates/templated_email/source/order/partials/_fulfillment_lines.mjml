<mj-section css-class="no-display">
  <mj-column>
    <mj-text>
      {% load gross from prices_i18n %}
    </mj-text>
  </mj-column>
</mj-section>
<mj-section>
  <mj-column>
    <mj-table>
      <thead class="table-header-row">
        <tr>
          <th>Item</th>
          <th>Quantity</th>
        </tr>
      </thead>
      <tbody>
        {% for line in fulfillment %}
          <tr class="table-item-row">
            <td>{{ line.order_line.product_name }}</td>
            <td style="text-align: right;">{{ line.quantity }}</td>
          </tr>
        {% endfor %}
      </tbody>
    </mj-table>
  </mj-column>
</mj-section>
