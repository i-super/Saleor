<mj-raw>
  {% load display_translated_order_line_name from order_lines %}
</mj-raw>
<mj-section>
  <mj-column>
    <mj-text>
      {% if physical_lines %}
        <table style="width:100%">
          <thead class="table-header-row">
            <tr>
              <th style="text-align: left;">{% trans "Item" context "Ordered item name" %}</th>
              <th style="text-align: right;">{% trans "Quantity" context "Quantity ordered of a product" %}</th>
            </tr>
          </thead>
          <tbody>
            {% for line in physical_lines %}
              <tr class="table-item-row">
                {% if line.order_line.variant_name %}
                <td>{{ line.order_line.product_name }} ({{line.order_line.variant_name }})</td>
                {% else %}
                <td>{{ line.order_line.product_name }}</td>
                {% endif %}
                <td style="text-align: right;">{{ line.quantity }}</td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      {% endif %}
      {% if digital_lines %}
        <table style="width:100%">
          <thead class="table-header-row">
            <tr>
              <th style="text-align: left;">{% trans "Item" context "Ordered item name" %}</th>
              <th style="text-align: right;">{% trans "Download Link" context "Ordered item download links" %}</th>
            </tr>
          </thead>
          <tbody>
            {% for line in digital_lines %}
              <tr class="table-item-row">
                {% if line.order_line.variant_name %}
                <td>{{ line.order_line.product_name }} ({{line.order_line.variant_name }})</td>
                {% else %}
                <td>{{ line.order_line.product_name }}</td>
                {% endif %}
                <td style="text-align: right;">
                  <a href={{ line.order_line.digital_url }}>Link</a>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      {% endif %}
    </mj-text>
  </mj-column>
</mj-section>
